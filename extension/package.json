{
    "name": "vs-api-contractor",
    "displayName": "API Contractor",
    "description": "Define, edit, validate and preview your API contracts in RAML and OpenAPI (Swagger)",
    "publisher": "deiteris",
    "version": "1.0.1",
    "license": "MIT",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.54.0"
    },
    "author": {
        "name": "Yury Palyanitsa"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/deiteris/api-contractor.git"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Linters"
    ],
    "keywords": [
        "api",
        "raml",
        "openapi",
        "asyncapi",
        "swagger"
    ],
    "main": "./dist/extension",
    "activationEvents": [
        "workspaceContains:*.{raml,yaml,yml,json}",
        "onLanguage:raml",
        "onLanguage:yaml",
        "onLanguage:json",
        "onCommand:ac.management.restart",
        "onCommand:ac.management.preview",
        "onCommand:ac.set.mainFile",
        "onWebviewPanel:apiFilePreview"
    ],
    "contributes": {
        "languages": [
            {
                "id": "raml",
                "aliases": [
                    "RAML",
                    "raml"
                ],
                "extensions": [
                    ".raml"
                ],
                "configuration": "./language-configs/raml.json"
            },
            {
                "id": "jsonc",
                "filenames": [
                    "exchange.json"
                ]
            }
        ],
        "grammars": [
            {
                "language": "raml",
                "scopeName": "source.raml",
                "path": "./syntaxes/raml.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "API Contractor",
            "properties": {
                "apiContractor.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                },
                "apiContractor.autoDetectRootApi": {
                    "scope": "window",
                    "type": "boolean",
                    "default": false,
                    "description": "Enables the root API file auto detection."
                },
                "apiContractor.autoRenameRefs": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "always",
                        "never"
                    ],
                    "default": "always",
                    "description": "Configures automatic rename of the referenced files. Works only when the workspace has the root API file set."
                }
            }
        },
        "commands": [
            {
                "command": "ac.set.mainFile",
                "title": "Set a root API file",
                "category": "API Contractor",
                "description": "Writes the \"exchange.json\" file to workspace root with the path to the root API file."
            },
            {
                "command": "ac.management.restart",
                "title": "Restart language server",
                "category": "API Contractor",
                "description": "Restarts the running instance of the language server."
            },
            {
                "command": "ac.management.preview",
                "title": "Preview current API file",
                "category": "API Contractor",
                "description": "Opens a preview of current API file in the API console.",
                "icon": "$(preview)",
                "when": "ac.isApiFile"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "ac.isApiFile && resourceLangId in ac.documentSelector",
                    "command": "ac.management.preview",
                    "group": "navigation"
                }
            ]
        }
    },
    "dependencies": {
        "fs-extra": "^9.1.0",
        "vscode-languageclient": "^7.0.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.11",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "^14.14.41",
        "@types/vscode": "1.54.0",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.3.0",
        "mocha": "^8.3.2",
        "rimraf": "^3.0.2",
        "ts-loader": "^9.1.1",
        "typescript": "^4.2.4",
        "vsce": "^1.87.1",
        "vscode-test": "^1.5.2",
        "webpack": "^5.35.1",
        "webpack-cli": "^4.6.0"
    },
    "scripts": {
        "compile": "rimraf dist && tsc",
        "vscode:prepublish": "rimraf dist && webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test-compile": "tsc -p ./"
    }
}
