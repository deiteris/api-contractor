{
  "name": "vs-code-api-console",
  "description": "The API Console package for Visual Studio Code.",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "Yury Palyanitsa"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/deiteris/api-contractor.git"
  },
  "dependencies": {
    "api-console": "^6.5.2",
    "fs-extra": "^10.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.9",
    "@open-wc/eslint-config": "^4.3.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/fs-extra": "^9.0.12",
    "babel-plugin-bundled-import-meta": "^0.3.2",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^2.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "postcss": "^8.3.6",
    "rimraf": "^3.0.2",
    "rollup": "^2.55.1",
    "rollup-plugin-cpy": "^2.0.1",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "uglify-js": "^3.14.1"
  },
  "resolutions": {
    "rollup-plugin-postcss/**/postcss": "^8.3.6",
    "api-console/**/underscore": "^1.13.1",
    "api-console/**/node-fetch": "^2.6.1",
    "**/@api-components/api-method-documentation": "5.2.0",
    "**/@api-components/api-responses-document": "4.2.0"
  },
  "scripts": {
    "start": "node demo/index.js",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint": "npm run lint:eslint",
    "format": "npm run format:eslint",
    "build": "rimraf dist && rollup -c rollup.config.js && node tasks/postbuild.js",
    "build:vendor": "node tasks/prepare.js",
    "build:full": "npm run build:vendor && npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=12.0.0",
    "vscode": "^1.54.0"
  }
}
